# final demand equals user inputs of all subsector demands
# demand for steel, aluminium, fertilizers and refineries is calculated using the scaling factor given by the user and the total demand in the parent dataset (parent_values.csv)
# for parent values, divide by 1 million because values in the CSV are in MJ and we need TJ

- query =
    steel_electricity_demand = (DATASET_INPUT(input_industry_metal_steel_scaling_factor) * PARENT_VALUE(industry_steel_hisarna_consumption_useable_heat, input_of_electricity) / 1_000_000.0) + (DATASET_INPUT(input_industry_metal_steel_scaling_factor) * PARENT_VALUE(industry_steel_electricfurnace_electricity, input_of_electricity) / 1_000_000.0) + (DATASET_INPUT(input_industry_metal_steel_scaling_factor) * PARENT_VALUE(industry_steel_blastfurnace_current_consumption_useable_heat, input_of_electricity) / 1_000_000.0);
    aluminium_electricity_demand = (DATASET_INPUT(input_industry_metal_aluminium_scaling_factor) * PARENT_VALUE(industry_aluminium_electrolysis_current_electricity, input_of_electricity) / 1_000_000.0) + (DATASET_INPUT(input_industry_metal_aluminium_scaling_factor) * PARENT_VALUE(industry_aluminium_electrolysis_bat_electricity, input_of_electricity) / 1_000_000.0) + (DATASET_INPUT(input_industry_metal_aluminium_scaling_factor) * PARENT_VALUE(industry_aluminium_carbothermalreduction_electricity, input_of_electricity) / 1_000_000.0) + (DATASET_INPUT(input_industry_metal_aluminium_scaling_factor) * PARENT_VALUE(industry_aluminium_smeltoven_electricity, input_of_electricity) / 1_000_000.0);
    metal_electricity_demand =  steel_electricity_demand + aluminium_electricity_demand + DATASET_INPUT(input_industry_metal_other_electricity_demand);
    fertilizers_electricity_demand = DATASET_INPUT(input_industry_chemical_fertilizers_scaling_factor) * PARENT_VALUE(industry_final_demand_for_chemical_fertilizers_electricity, input_of_electricity) / 1_000_000.0;
    refineries_electricity_demand = DATASET_INPUT(input_industry_chemical_refineries_scaling_factor) * PARENT_VALUE(industry_final_demand_for_chemical_refineries_electricity, input_of_electricity) / 1_000_000.0;
    chemical_electricity_demand = fertilizers_electricity_demand + refineries_electricity_demand + DATASET_INPUT(input_industry_chemical_other_electricity_demand);
    other_electricity_demand = DATASET_INPUT(input_industry_food_electricity_demand) + DATASET_INPUT(input_industry_paper_electricity_demand) + DATASET_INPUT(input_industry_other_electricity_demand);

    metal_electricity_demand + chemical_electricity_demand + other_electricity_demand
