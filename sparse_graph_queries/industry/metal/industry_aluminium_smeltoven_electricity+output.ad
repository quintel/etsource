# If no smeltoven is available in the start situation, use placeholder values (taken from NL2015).
# Aluminium output is in MT, energy is in TJ. ETM assumes efficiency in kg / MJ hence multiply by thousand.

- query =
    smeltoven_electricity = DATASET_INPUT(input_industry_metal_aluminium_electricity_demand) * DATASET_INPUT(industry_final_demand_for_metal_aluminium_electricity_industry_aluminium_smeltoven_electricity_parent_share);
    smeltoven_network_gas = DATASET_INPUT(input_industry_metal_aluminium_network_gas_demand) * DATASET_INPUT(industry_aluminium_burner_network_gas_industry_aluminium_smeltoven_electricity_parent_share);
    smeltoven_useable_heat = smeltoven_network_gas / NODE_EFFICIENCY(industry_aluminium_burner_network_gas, output, useable_heat);
    smeltoven_total = smeltoven_electricity + smeltoven_useable_heat;
    aluminium_output = DATASET_INPUT(input_industry_metal_aluminium_production) * DATASET_INPUT(input_industry_aluminium_smeltoven_electricity_share);

    IF(smeltoven_total > 0.0, {
        not_defined: aluminium_output * 1000.0 / smeltoven_total}, {
        not_defined: 0.124688279301746}
        )
