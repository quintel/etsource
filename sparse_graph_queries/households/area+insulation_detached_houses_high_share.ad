# this query calculates the heat demand profile shares

- query =
    reduction = SPARSE_GRAPH_QUERY(area+insulation_detached_houses_start_value);
    medium_reduction = AREA(heat_demand_reduction_medium_insulation_detached_house);
    high_reduction = AREA(heat_demand_reduction_high_insulation_detached_house);

    IF(reduction >= medium_reduction, DIVIDE((reduction - medium_reduction), (high_reduction - medium_reduction)), 0.0)
