    UPDATE(EDGE(industry_chemicals_refineries_emitted_co2, industry_chemicals_refineries_capture_potential_co2), share, 1.0 - DIVIDE(USER_INPUT(),100.0))
  )
- priority = 0
- max_value = 100.0
