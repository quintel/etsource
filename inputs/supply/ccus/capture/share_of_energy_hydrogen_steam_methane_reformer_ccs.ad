            V(energy_hydrogen_steam_methane_reformer_ccs),
            number_of_units,
            DIVIDE(USER_INPUT(),100.0) * INPUT_VALUE(capacity_of_energy_hydrogen_steam_methane_reformer) / V(energy_hydrogen_steam_methane_reformer_ccs, typical_input_capacity)
