- query =
    EACH(
      UPDATE(
        V(energy_heat_network_storage),
        number_of_units,
        IF(USER_INPUT() == 0.0, -> { 0.0 }, -> { 1.0 })
      )
    )
- priority = 1
- max_value = 1.0
- min_value = 0.0
- start_value_gql = present:0.0
- step_value = 1.0
- unit = bool
- update_period = both
