- query =
    EACH(
        UPDATE(
            V(energy_chp_local_mt_wood_pellets),
            number_of_units,
            (1.0 - DIVIDE(USER_INPUT(),100.0)) * INPUT_VALUE(capacity_of_energy_chp_local_wood_pellets) / V(energy_chp_local_mt_wood_pellets, electricity_output_capacity)
        ),
        UPDATE(
            L(energy_chp_local_mt_wood_pellets),
            preset_demand_by_electricity_production,
            V(energy_chp_local_mt_wood_pellets, production_based_on_number_of_units)
        ),
        UPDATE(
            V(energy_chp_local_ht_wood_pellets),
            number_of_units,
            (1.0 - DIVIDE(USER_INPUT(),100.0)) * INPUT_VALUE(capacity_of_energy_chp_local_wood_pellets) / V(energy_chp_local_ht_wood_pellets, electricity_output_capacity)
        ),
        UPDATE(
            L(energy_chp_local_ht_wood_pellets),
            preset_demand_by_electricity_production,
            V(energy_chp_local_ht_wood_pellets, production_based_on_number_of_units)
        )
    )
- priority = 1
- max_value = 100.0
- min_value = 0.0
- start_value_gql = present:DIVIDE(V(energy_chp_local_ht_wood_pellets,"number_of_units*electricity_output_capacity"),SUM(V(energy_chp_local_ht_wood_pellets,"number_of_units*electricity_output_capacity"),V(energy_chp_local_mt_wood_pellets, "number_of_units*electricity_output_capacity")))
- step_value = 1.0
- unit = %
- update_period = future
