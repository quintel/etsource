# Changing efficiency should update electricity output conversion
# Number of units should remain unchanged as total electricity output capacity should remain
# unchanged, since this is a user input
# typical input capacity should be updated to unsure electricity output capacity remains unchanged
# Priority set to 3 to set prior to share of ccs, ht/mt and capacity input

- query =
    original_nou_ht = V(energy_chp_supercritical_ht_waste_mix, number_of_units);
    original_nou_mt = V(energy_chp_supercritical_mt_waste_mix, number_of_units);
    start_efficiency_ht = QUERY_PRESENT(-> {V(energy_chp_supercritical_ht_waste_mix, electricity_output_conversion)}) * 100.0;
    start_efficiency_mt = QUERY_PRESENT(-> {V(energy_chp_supercritical_mt_waste_mix, electricity_output_conversion)}) * 100.0;

    EACH(
      UPDATE(OUTPUT_SLOTS(V(energy_chp_supercritical_ht_waste_mix), electricity), conversion, DIVIDE(USER_INPUT(), 100.0)),
      UPDATE(V(energy_chp_supercritical_ht_waste_mix), number_of_units, original_nou_ht),
      UPDATE(V(energy_chp_supercritical_ht_waste_mix), preset_demand_by_electricity_production, V(energy_chp_supercritical_ht_waste_mix, production_based_on_number_of_units)),

      UPDATE(OUTPUT_SLOTS(V(energy_chp_supercritical_mt_waste_mix), electricity), conversion, DIVIDE(USER_INPUT(), 100.0)),
      UPDATE(V(energy_chp_supercritical_mt_waste_mix), number_of_units, original_nou_mt),
      UPDATE(V(energy_chp_supercritical_mt_waste_mix), preset_demand_by_electricity_production, V(energy_chp_supercritical_mt_waste_mix, production_based_on_number_of_units)),

      UPDATE_WITH_FACTOR(
        V(energy_chp_supercritical_ht_waste_mix),
        typical_input_capacity,
        DIVIDE(start_efficiency_ht, USER_INPUT())
      ),
      UPDATE_WITH_FACTOR(
        V(energy_chp_supercritical_mt_waste_mix),
        typical_input_capacity,
        DIVIDE(start_efficiency_mt, USER_INPUT())
      )
    )
- priority = 3
- max_value_gql = present:(V(energy_chp_supercritical_ht_waste_mix, electricity_output_conversion) * 100.0) + 10.0
- min_value_gql = present:(V(energy_chp_supercritical_ht_waste_mix, electricity_output_conversion) * 100.0) - 10.0
- start_value_gql = present:V(energy_chp_supercritical_ht_waste_mix, electricity_output_conversion) * 100.0
- step_value = 1.0
- unit = %
- update_period = future
- disabled_by_couplings = [external_model_industry, waste_chp]
