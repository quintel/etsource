- query =
    UPDATE(
        OUTPUT_SLOTS(
            V(energy_hydrogen_electrolysis_solar_electricity,
            energy_hydrogen_electrolysis_wind_electricity,
            energy_hydrogen_flexibility_p2g_electricity
            ),
        hydrogen),
        conversion,
        DIVIDE(USER_INPUT(), 100.0)
    )
- priority = 0
- max_value_gql = present:(V(energy_hydrogen_flexibility_p2g_electricity,hydrogen_output_conversion) * 100.0) + 10.0
- min_value_gql = present:(V(energy_hydrogen_flexibility_p2g_electricity,hydrogen_output_conversion) * 100.0) - 10.0
- start_value_gql = present:V(energy_hydrogen_flexibility_p2g_electricity,hydrogen_output_conversion) * 100.0
- step_value = 1.0
- unit = %
- update_period = future
