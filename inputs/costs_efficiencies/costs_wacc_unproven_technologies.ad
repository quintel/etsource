# This slider updates the wacc for all unproven / new technologies

- query =
    UPDATE(
      FLATTEN(GROUP(wacc_unproven_tech), MGROUP(wacc_unproven_tech)),
      wacc,
      DIVIDE(USER_INPUT(), 100.0)
    )
- priority = 0
- max_value = 15.0
- min_value = 0.0
- start_value = 7.0
- step_value = 0.1
- update_period = future
- unit = %
