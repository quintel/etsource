- query =
    EACH(
      UPDATE(
          V(energy_heat_flexibility_p2h_heatpump_mt_electricity),
          number_of_units,
          DIVIDE(INPUT_VALUE(share_of_energy_heat_flexibility_p2h_heatpump_mt_electricity),100.0) * USER_INPUT() / V(energy_heat_flexibility_p2h_heatpump_mt_electricity, heat_output_capacity)
      ),
      UPDATE(
          V(energy_heat_flexibility_p2h_heatpump_ht_electricity),
          number_of_units,
          DIVIDE(INPUT_VALUE(share_of_energy_heat_flexibility_p2h_heatpump_ht_electricity),100.0) * USER_INPUT() / V(energy_heat_flexibility_p2h_heatpump_ht_electricity, heat_output_capacity)
      )
    )
- priority = 0
- max_value_gql = present:DIVIDE(DIVIDE(MAX(0.5 * Q(heat_production_total) * BILLIONS, V(energy_heat_flexibility_p2h_heatpump_ht_electricity, output_of_steam_hot_water)*2), V(energy_heat_flexibility_p2h_heatpump_ht_electricity,full_load_hours)), MJ_PER_MWH)
- min_value = 0.0
- start_value_gql = 
    present:SUM(
      V(energy_heat_flexibility_p2h_heatpump_mt_electricity, "number_of_units * heat_output_capacity"),
      V(energy_heat_flexibility_p2h_heatpump_ht_electricity, "number_of_units * heat_output_capacity")
    )
- step_value = 1.0
- unit = MW
- update_period = future
