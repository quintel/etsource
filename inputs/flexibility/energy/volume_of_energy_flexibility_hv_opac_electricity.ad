- query =
    UPDATE(
      V(energy_flexibility_hv_opac_electricity, storage),
      "volume",
      PRODUCT(
        USER_INPUT(),
        DIVIDE(
          INPUT_VALUE(capacity_of_energy_flexibility_hv_opac_electricity),
          V(energy_flexibility_hv_opac_electricity,number_of_units)
        )
      )
    )
- priority = 0
- max_value = 100.0
- min_value = 1.0
- start_value_gql = present:DIVIDE(V(energy_flexibility_hv_opac_electricity, "storage.volume"),V(energy_flexibility_hv_opac_electricity,typical_input_capacity))
- step_value = 0.1
- unit = hours
- update_period = future
