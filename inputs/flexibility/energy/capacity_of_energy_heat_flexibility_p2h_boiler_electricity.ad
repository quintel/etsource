- query =
    UPDATE(
        V(energy_heat_flexibility_p2h_boiler_electricity),
        number_of_units,
        USER_INPUT() / V(energy_heat_flexibility_p2h_boiler_electricity,heat_output_capacity)
    )
- priority = 0
- max_value_gql = present:DIVIDE(DIVIDE(MAX(0.5 * Q(heat_production_total) * BILLIONS, V(energy_heat_flexibility_p2h_boiler_electricity, output_of_steam_hot_water)*2), V(energy_heat_flexibility_p2h_boiler_electricity,full_load_hours)), MJ_PER_MWH)
- min_value = 0.0
- start_value_gql = present:PRODUCT(V(energy_heat_flexibility_p2h_boiler_electricity,number_of_units),V(energy_heat_flexibility_p2h_boiler_electricity,heat_output_capacity))
- step_value = 1.0
- unit = MW
- update_period = future
