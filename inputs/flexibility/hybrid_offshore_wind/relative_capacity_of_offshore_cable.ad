# Updates number_of_units of both cable from offshore network and cable to offshore network
# Priority set to 1 so this query is calculated before capacity_of_energy_power_hybrid_wind_turbine_offshore

- query =
    relative_capacity_offshore_cable = DIVIDE(USER_INPUT(), 100);
    installed_electricity_output_hybrid_offshore_wind = INPUT_VALUE(capacity_of_energy_power_hybrid_wind_turbine_offshore);
      EACH(
        UPDATE(
          V(energy_power_from_offshore_network_electricity),
          number_of_units,
          DIVIDE(
            PRODUCT(
              relative_capacity_offshore_cable,
              installed_electricity_output_hybrid_offshore_wind
            ),
            V(energy_power_from_offshore_network_electricity, typical_input_capacity)
          )
        ),
        UPDATE(
          V(energy_power_to_offshore_network_electricity),
          number_of_units,
          DIVIDE(
            PRODUCT(
              relative_capacity_offshore_cable,
              installed_electricity_output_hybrid_offshore_wind
            ),
            V(energy_power_to_offshore_network_electricity, typical_input_capacity)
          )
        )
      )      

- priority = 1
- max_value = 200.0
- min_value = 20.0
- start_value = 50.0
- step_value = 0.1
- unit = %
- update_period = future
