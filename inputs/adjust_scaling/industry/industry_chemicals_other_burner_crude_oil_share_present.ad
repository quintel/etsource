- query =
    EACH(
      UPDATE(LINK(industry_chemicals_other_burner_crude_oil,industry_useful_demand_for_chemical_other_useable_heat), share, DIVIDE(USER_INPUT(),100)),
      UPDATE(LINK(industry_useful_demand_for_chemical_other_useable_heat,industry_chemicals_other_burner_network_gas), share,
        ->{SUM(NEG(SUM(V(EXCLUDE(INPUT_LINKS(V(industry_useful_demand_for_chemical_other_useable_heat)),UPDATE_COLLECTION()), share))), 1)}
      )
    )
- share_group = chemical_other_heat_present
- priority = 1
- max_value = 100.0
- min_value = 0.0
- start_value_gql = present:V(industry_chemicals_other_burner_crude_oil,share_of_industry_useful_demand_for_chemical_other_useable_heat) * 100
- step_value = 0.1
- unit = %
- update_period = present
