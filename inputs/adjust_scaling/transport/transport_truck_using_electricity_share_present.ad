- query =
    EACH(
      UPDATE(LINK(transport_truck_using_electricity,transport_useful_demand_truck_kms), share, DIVIDE(USER_INPUT(),100)),
      UPDATE(LINK(transport_useful_demand_truck_kms,transport_truck_using_diesel_mix), share,
        ->{SUM(NEG(SUM(V(EXCLUDE(INPUT_LINKS(V(transport_useful_demand_truck_kms)),UPDATE_COLLECTION()), share))), 1)}
      )
    )
- share_group = transport_truck_tech_present
- priority = 1
- max_value = 100.0
- min_value = 0.0
- start_value = 0.0
- start_value_gql = present:V(transport_truck_using_electricity,share_of_transport_useful_demand_truck_kms) * 100
- step_value = 0.1
- unit = %
- update_period = present
