- priority = 0
- step_value = 0.1
- max_value_gql = present:AREA(insulation_level_buildings_max)
- min_value_gql = present:AREA(insulation_level_buildings_min)
- start_value = 30.0
- unit = %
- update_period = future
- dependent_on = has_buildings
- query =
    start_reduction = 30.0;
    future_reduction = USER_INPUT();
    share_of_savings_from_insulation = 1.0 - DIVIDE((100.0 - future_reduction), (100.0 - start_reduction));

    EACH(
      UPDATE(LINK(buildings_useful_demand_for_space_heating,buildings_heating_savings_from_insulation_useable_heat), share, share_of_savings_from_insulation ),
      UPDATE(LINK(buildings_useful_demand_cooling,buildings_cooling_savings_insulation_cooling), share, share_of_savings_from_insulation)
    )
