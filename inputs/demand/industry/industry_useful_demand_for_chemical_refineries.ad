- query =
    present_value = QUERY_PRESENT(-> {Q(industry_useful_demand_for_chemical_refineries)});
    relative_value = USER_INPUT() / present_value;

    EACH(
      UPDATE_WITH_FACTOR(
        V(industry_useful_demand_for_chemical_refineries_coal_non_energetic),
        preset_demand,
        relative_value
        ),
      UPDATE_WITH_FACTOR(
        V(industry_useful_demand_for_chemical_refineries_crude_oil_non_energetic),
        preset_demand,
        relative_value
        ),
      UPDATE_WITH_FACTOR(
        V(industry_useful_demand_for_chemical_refineries_electricity),
        preset_demand,
        relative_value
        ),
      UPDATE_WITH_FACTOR(
        V(industry_useful_demand_for_chemical_refineries_network_gas_non_energetic),
        preset_demand,
        relative_value
        ),
      UPDATE_WITH_FACTOR(
        V(industry_useful_demand_for_chemical_refineries_useable_heat),
        preset_demand,
        relative_value
        ),
      UPDATE_WITH_FACTOR(
        V(industry_useful_demand_for_chemical_refineries_wood_pellets_non_energetic),
        preset_demand,
        relative_value
        )
      )
- priority = 0
- max_value_gql = present:PRODUCT(Q(industry_useful_demand_for_chemical_refineries),3)
- min_value = 0.0
- start_value_gql = present:Q(industry_useful_demand_for_chemical_refineries)
- step_value = 0.1
- unit = PJ
- update_period = future
- disabled_by_couplings = [external_model_industry, industry_chemical_refineries]
