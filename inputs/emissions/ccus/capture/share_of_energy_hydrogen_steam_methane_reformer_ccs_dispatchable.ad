- query =
    EACH(
        UPDATE(
            V(energy_hydrogen_steam_methane_reformer_dispatchable),
            number_of_units,
            (1.0 - DIVIDE(USER_INPUT(),100.0)) * INPUT_VALUE(capacity_of_energy_hydrogen_steam_methane_reformer_dispatchable) / V(energy_hydrogen_steam_methane_reformer_dispatchable, typical_input_capacity)
        ),
        UPDATE(
            L(energy_hydrogen_steam_methane_reformer_dispatchable),
            preset_demand_by_hydrogen_production,
            V(energy_hydrogen_steam_methane_reformer_dispatchable, production_based_on_number_of_units)
        ),
        UPDATE(
            V(energy_hydrogen_steam_methane_reformer_ccs_dispatchable),
            number_of_units,
            DIVIDE(USER_INPUT(),100.0) * INPUT_VALUE(capacity_of_energy_hydrogen_steam_methane_reformer_dispatchable) / V(energy_hydrogen_steam_methane_reformer_ccs_dispatchable, typical_input_capacity)
        ),
        UPDATE(
            L(energy_hydrogen_steam_methane_reformer_ccs_dispatchable),
            preset_demand_by_hydrogen_production,
            V(energy_hydrogen_steam_methane_reformer_ccs_dispatchable, production_based_on_number_of_units)
        )
    )
- priority = 1
- max_value = 100.0
- min_value = 0.0
- start_value_gql = present:DIVIDE(V(energy_hydrogen_steam_methane_reformer_ccs_dispatchable,"number_of_units*typical_input_capacity"),SUM(V(energy_hydrogen_steam_methane_reformer_ccs_dispatchable,"number_of_units*typical_input_capacity"),V(energy_hydrogen_steam_methane_reformer_dispatchable, "number_of_units*typical_input_capacity")))
- step_value = 1.0
- unit = %
- update_period = future
