# This input sets the total installed electrical output capacity of Waste CHPs
# It distributes this total capacity according to temperature level (MT/HT) and CCS (with/without)

- query =
    mt_without_ccs_share = PRODUCT(DIVIDE(INPUT_VALUE(share_of_energy_chp_supercritical_mt_waste_mix),100.0),(1.0 - DIVIDE(INPUT_VALUE(share_of_energy_chp_supercritical_ccs_mt_waste_mix),100.0)));
    mt_with_ccs_share =    PRODUCT(DIVIDE(INPUT_VALUE(share_of_energy_chp_supercritical_mt_waste_mix),100.0),DIVIDE(INPUT_VALUE(share_of_energy_chp_supercritical_ccs_mt_waste_mix),100.0));
    ht_without_ccs_share = PRODUCT(DIVIDE(INPUT_VALUE(share_of_energy_chp_supercritical_ht_waste_mix),100.0),(1.0 - DIVIDE(USER_INPUT(),100.0)));
    ht_with_ccs_share =    PRODUCT(DIVIDE(INPUT_VALUE(share_of_energy_chp_supercritical_ht_waste_mix),100.0),DIVIDE(USER_INPUT(),100.0));


    EACH(
        UPDATE(
            V(energy_chp_supercritical_ht_waste_mix),
            number_of_units,
            ht_without_ccs_share * INPUT_VALUE(capacity_of_energy_chp_supercritical_waste_mix) / V(energy_chp_supercritical_ht_waste_mix, electricity_output_capacity)
        ),
        UPDATE(
            L(energy_chp_supercritical_ht_waste_mix),
            preset_demand_by_electricity_production,
            V(energy_chp_supercritical_ht_waste_mix, production_based_on_number_of_units)
        ),
        UPDATE(
            V(energy_chp_supercritical_ccs_ht_waste_mix),
            number_of_units,
            ht_with_ccs_share * INPUT_VALUE(capacity_of_energy_chp_supercritical_waste_mix) / V(energy_chp_supercritical_ccs_ht_waste_mix, electricity_output_capacity)
        ),
        UPDATE(
            L(energy_chp_supercritical_ccs_ht_waste_mix),
            preset_demand_by_electricity_production,
            V(energy_chp_supercritical_ccs_ht_waste_mix, production_based_on_number_of_units)
        )
    )

- priority = 2
- max_value = 100.0
- min_value = 0.0
- start_value_gql =
    present:DIVIDE(
      V(energy_chp_supercritical_ccs_ht_waste_mix,"number_of_units*electricity_output_capacity"),
      SUM(
        V(energy_chp_supercritical_ccs_ht_waste_mix,"number_of_units*electricity_output_capacity"),
        V(energy_chp_supercritical_ht_waste_mix, "number_of_units*electricity_output_capacity")
      )
    )
- step_value = 1.0
- unit = %
- update_period = future
- disabled_by_couplings = [ctm, waste_chp]
