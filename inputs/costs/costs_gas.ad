- query =
    present_value = QUERY_PRESENT(-> {Q(price_of_gas)});
    relative_value = USER_INPUT() / present_value;
      UPDATE_WITH_FACTOR(
        CARRIER(natural_gas,lng), cost_per_mj, relative_value)
- priority = 0
- max_value = 200.0
- min_value = 0.0
- start_value_gql = present:Q(price_of_gas)
- step_value = 0.1
- unit = euro
- update_period = future
