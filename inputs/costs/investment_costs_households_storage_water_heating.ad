- query =
    UPDATE(
      V(
        households_water_heater_heatpump_air_water_electricity,
        households_water_heater_heatpump_ground_water_electricity,
        households_water_heater_hybrid_heatpump_air_water_electricity,
        storage
      ),
      cost_per_mwh,
      DIVIDE(USER_INPUT(), 0.001)
    )
- priority = 0
- max_value = 500.0
- min_value = 0.0
- start_value_gql = present:V(households_water_heater_heatpump_air_water_electricity,"storage.cost_per_mwh")*1000
- step_value = 0.5
- factor = 1.0
- unit = euro_per_MWh
- update_period = future