# This slider updates the cost_per_mj of biogas and bio_LNG (unit: eur / MWh)

- query =
  present_value = QUERY_PRESENT(-> {Q(price_of_biogas)});
  relative_value = USER_INPUT() / present_value;
    UPDATE_WITH_FACTOR(
      CARRIER(
        biogas, bio_lng), cost_per_mj, relative_value)
- priority = 0
- max_value = 200.0
- min_value = 0.0
- start_value_gql = present:Q(price_of_biogas)
- step_value = 1.0
- unit = euro
- update_period = future
