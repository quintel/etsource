- query =
    UPDATE(
      EDGE(
        industry_useful_demand_for_chemical_refineries_useable_heat,
        industry_chemicals_refineries_processes_potential_residual_heat
      ),
      share,
      DIVIDE(USER_INPUT(),100)
    )
- priority = 0
- max_value = 100.0
- min_value = 0.0
- start_value_gql = present:V(industry_useful_demand_for_chemical_refineries_useable_heat,share_of_industry_chemicals_refineries_processes_potential_residual_heat) * 100
- step_value = 0.1
- unit = %
- update_period = future
- coupling_groups = [ctm]
